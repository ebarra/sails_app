<div class="container">
  <h3>Usuarios</h3>
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Sexo</th>
      <th></th>
      <th></th>
    </tr>

    <% _.each(users, function(user) { %>
    <tr data-id="<%= user.id %>" dat-model="user">
      <td><%= user.id %></td>
      <td><%= user.nombre %></td>
      <td><%= user.sexo %></td>
      <td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Mostrar</a></td>
      <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Editar</a></td>

      <td>
        <form action="/user/destroy/<%= user.id %>" method="POST">
          <input type="hidden" name="method" value="delete"/>
          <input type="submit" class="btn btn-sm btn-danger" value="Borrar"/>
          <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
        </form></td>
    </tr>

    <% }) %>
  </table>

  <a class="btn btn-primary" href="/user/new">Nuevo</a>
</div>
